{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "test/**/*.ts"],
    "compilerOptions": {
        "lib": ["es2020"],
        "target": "es2024",
        "module": "NodeNext",
        "outDir": "dist",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        // "resolveJsonModule": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "isolatedModules": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@app/*": ["app/*"],
            "@plugins/*": ["plugins/*"],
            "@database/*": ["database/*"],
            "@config/*": ["config/*"],
            "@auth/*": ["app/auth/*"],
            "@gallery/*": ["app/gallery/*"],
            "@mail/*": ["app/mail/*"],
            "@interfaces/*": ["interfaces/*"]
        },
        "typeRoots": [
            "node",
            "@types",
            "fastify",
            "bullmq",
            "knex",
            "ioredis",
            "@aws-sdk/client-s3",
            "fluent-json-schema",
            "close-with-grace",
            "@sinclair/typebox",
            "@fastify/cors",
            "@fastify/formbody",
            "@fastify/helmet",
            "@fastify/jwt",
            "@fastify/multipart",
            "@fastify/rate-limit",
            "@fastify/sensible",
            "@fastify/under-pressure"
        ]
    }
}
