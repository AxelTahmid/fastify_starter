{
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "test/**/*.ts"],
	"compilerOptions": {
		"lib": ["es2020"],
		"target": "es2024",
		"module": "NodeNext",
		"outDir": "dist",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		// "resolveJsonModule": true,
		"removeComments": true,
		"noUnusedLocals": true,
		"isolatedModules": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node",
			"@types",
			"fastify",
			"bullmq",
			"@fastify/jwt",
			"knex",
			"ioredis",
			"@aws-sdk/client-s3"
		],
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@plugins/*": ["plugins/*"],
			"@database/*": ["database/*"],
			"@config/*": ["config/*"],
			"@auth/*": ["app/auth/*"],
			"@gallery/*": ["app/gallery/*"],
			"@mail/*": ["app/mail/*"]
		}
	}
}
